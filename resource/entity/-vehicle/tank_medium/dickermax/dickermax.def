    		{BrakeTime    1} 
    		{StopTime     2} 
    		{TurnRadius   8} 
    		{TurnStop   0.8}
     		{Gears  0.1 0.2 0.3 1}
    		{RearGears 0.28}
		}
		{FuelBag
			{volume 470 }	
			{rate	36 }   
			{remain 470 }
			{fuel "fuel"}
		}
		{speed
        	{Normal  10}
        	{Slow  16}
    	}
