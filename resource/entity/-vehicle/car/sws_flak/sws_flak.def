{game_entity
	;© 2008 Zeke Wolff & Ngvede.
	(include "/properties/car.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	(include "/properties/car_crew.ext")
	{props "vehicle" "car" "wheeled" "turret_rotator" "flak" "barrel1" "with_gun" "vision_vehicle_medium" "muzzle_zenite"}
	{collider "truck"}

	("armor_medium" args 1.0)

	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-highcar_driver)
		board_end(seat_driver_car)
		;base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-highcar)
		board_end(seat_passenger)
		;base(doorright)
	)

	{boarder
		{anm "gunner"
			{forward	{begin	"board_LowTank_stand"} {end "pose_flak38_gunlayer"}}
			{reverse 	{end	"emit_tank_1"}}
    	}
		{anm "charger"
			{forward	{begin	"board_LowTank_stand"} {end "pose_pak40_charger"}}
			{reverse 	{end	"emit_tank_1"}}
    	}
}

	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 15}   
	}
	{volume "engine"
		{thickness 5}
	}
	{Volume "bodyback"
		{component "body"}
		{thickness 8}
	}
	{volume "cabin"
		{tags "cabin"}
		{component "cabin"}
		{thickness 15}
	}
	{volume "turret"
		{thickness 10}
	}
	{component "turret"
		{RepairTime 20}
	}
	{volume "shield1"
		{thickness 10}
	}
	{component "shield1"	
		{RepairTime 10}
	}
	{volume "shield2"
		{thickness 10}
	}
	{component "shield2"	
		{RepairTime 10}
	}
	{volume "shield3"
		{thickness 10}
	}
	{component "shield3"	
		{RepairTime 10}
	}
	{volume "shield4"
		{thickness 10}
	}
	{component "shield4"	
		{RepairTime 10}
	}
	{Volume "gun"
		{tags "gun"}
		{thickness 15}
	}
	{component "gun"
		{RepairTime 15}
	}
	{Volume "fuel"
		{thickness 15}
	}
	{Volume "wheelleft1"
		{component "wheelleft1"}
	}
	{Volume "wheelright1"
		{component "wheelright1"}
	}
	{Volume "trackright"
		{component "trackright"}
	}
	{Volume "trackleft"
		{component "trackleft"}
	}
	

	("crew_human" place(gunner)		bone(gunner)	door(emit4) animation(gunner))
	("crew_human" place(charger)		bone(charger)	door(emit3) animation(charger))
	
	{placer
		{place "driver" 		{visor "driver"}	{group "crew"}}
		{place "commander"		{visor "driver"}	{group "crew"}}
		{place "gunner"		{visor "main"}	{group "gunners"}}
		{place "charger"		{visor "main"}	{group "gunners"}}
	}

	{extender "inventory"
		{box
			{size 6 6}
			{item "ger_bullet37_flak36 ap" 270}
			{item "ger_bullet37_flak36 fg" 200}
		}
	}	
	{Weaponry
		{place "gun"
			{weapon "37mm_flak43" filling "ger_bullet37_flak36 ap" 8}    
			{StationaryFiring}  
			("abm_low")
			{gunner "gunner"}
			{charger "charger"}
		}
	}
	{sensor
		{visor "main"
			{bone "gun_rot"}
		}
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor2"}
		}
		{visor "view_around"
			{vision "tank_around"}
			{bone "visor2"}
		}
	}
	
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("tracks")

	{mass 15000}
	{Chassis
		{Locomotion ("locomotion")
			{MaxSpeed	22}
	  		{maxSpeedAtMaxTurn 10}	
			{StartTime	10}
			{BrakeTime	2}	
			{StopTime	3}
			{TurnRadius	8}
		}
		{FuelBag
			{volume 215 }	
			{rate	24 }   
			{remain 215 }
			{fuel "fuel"}
			}
		{speed
        		{Normal  12}
    		}
		; left track must be first
		("tank_trace" fx("tracks_mid") step(0.5) len(0.86) boneleft("FXtraceL2") boneright("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	{DisableMoveWhileFiring}
	}
	

	{Extension "sws_flak.mdl"}

	{bone "turret"
		{speed 0.02}
	}
}
