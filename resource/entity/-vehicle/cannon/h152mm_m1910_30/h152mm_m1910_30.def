		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		{rotate_ik_Limit 3}
	}
	{Chassis "track"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_big")
    }
	{sensor
		{visor "main"
			{vision "cannon_main"}
		}
	}
	
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
